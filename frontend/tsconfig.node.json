{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Node.js environment */
    "module": "ESNext",
    "moduleResolution": "Node",
    "composite": true,
    "noEmit": true,

    /* Compatibilidade e JSON */
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Seguran√ßa de tipos */
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts",
    "hardhat.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ]
}
