{
  "name": "smart-contract",
  "version": "1.0.0",
  "description": "Crowdfunding DApp Smart Contract",
  "main": "index.js",
  "type": "module",

  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:ci": "mkdir -p reports && solhint -f checkstyle -w reports/solhint.xml \"contracts/**/*.sol\"",
    "test": "hardhat test",
    "test:node-junit": "mkdir -p reports && node --test --test-reporter=junit --test-reporter-destination=reports/contracts-junit.xml ./test/*.js",
    "test:ci": "npm run compile && npm run test && npm run test:node-junit || true",
    "deploy": "hardhat run scripts/deploy.js --network localhost",
    "sync-abi": "node ./scripts/sync-abi.cjs",
    "build:frontend": "npm run compile && npm run sync-abi && cd ../frontend && npm run build"
  },

  "keywords": [
    "hardhat",
    "blockchain",
    "ethereum",
    "crowdfunding",
    "smart-contract"
  ],
  "author": "Luan Bernardes Paes",
  "license": "ISC",

  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.2",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.0",
    "solhint": "^3.6.2"
  },

  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
