{
  "name": "smart-contract",
  "version": "1.0.0",
  "description": "Crowdfunding DApp Smart Contract",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "deploy": "npx hardhat ignition deploy ignition/modules/CrowdfundModule.ts --network localhost --deployment-id cf-local-1",
    "copy-abi": "node ./scripts/sync-abi.cjs",
    "build:frontend": "npm run compile && npm run copy-abi && cd ../frontend && npm run build"
  },
  "keywords": [
    "hardhat",
    "blockchain",
    "ethereum",
    "crowdfunding",
    "smart-contract"
  ],
  "author": "Luan Bernardes Paes",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.12.7",
    "chai": "^4.3.10",
    "dotenv": "16.4.5",
    "ethers": "^6.14.0",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "^2.2.1",
    "solhint": "3.6.2",
    "solidity-coverage": "^0.8.8",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.1",
    "typescript": "^5.4.5"
  }
}
